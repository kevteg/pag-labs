
.slider
    position: relative;
    width: 100%
    height: 25em
    background: url("../images/ac9c.jpg") center no-repeat
    background-size: 100% 100%
    .join-us
      top: 40%
      left: 65%
      width: 15em
      padding: 1.5em
      position: absolute;
      background: rgba(0, 0, 0, 0.8);
      .link-more
        padding-left: 10em
        margin: 0
        width: 6em
        a
          vertical-align: middle;
          padding: 0.2em
          background: #ff3333
          border-radius: 0.2em
          text-decoration: none;
          color: white
          &:visited
            color: white
      h1
        color: white
      span
        color: white

section
  .slogan
    padding: 1em
    h1
      color: #3399ff

  .investigation-lines
    text-align: center;
    padding: 1em
    width: 100%;
    background: #bbc3cc
    .investigation-item
      text-align: center;
      width: 20%
      padding: 0 3.5em
      display: inline-block;
      img,span
        display: block;
      img
        margin: 0 auto
        border-radius: 50%
      span
        //aqui falta xD!

.members
  text-align: center;
  padding-top: 1em
  .member-item
    width: 30%
    margin: 0 0.8em
    text-align: center;
    display: inline-block;
    border: solid 1px #ccc
    box-shadow: 1px 1px 5px rgba(0,0,0,0.2)
    img
      padding: 2em
      width: 15em
      height: 15em
      border-radius: 50%
    h2
      padding: 0.5em
      background: #ff3333
      color: white
    span
    .member-social
      padding: 1em
      img
        padding: 0 0.3em
        width: 3em
        height: 3em

