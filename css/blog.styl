footer
  background: url("../images/d4tleft.png") center no-repeat
  width: 100%
  height: 40em
  background-size: 100% 100%
  .upper-footer
    padding: 2em
    border-bottom: 1px solid rgba(255,255,255,0.2)
    h1,h2
      color: white
  .lower-footer
    .contact,.space-game,.interest-links
      display: inline-block;
    .contact
      padding: 2em
      width: 30%
      h2
        color: white
      .social-subscription
        a
          img
            padding: 0 0.5em
            width: 2em
            height: 2em
    .space-game
      width: 30%
      .start-game
        margin: 0 auto
        width: 6em
        height: 6em
        background: rgba(0,0,0,0.8)
        text-align: center;
        border-radius: 50%

    .interest-links
      float: right;
      width: 20%
      color: white
      padding-left: 5em
      a,h2
        display: inline-block;
      a
        vertical-align: middle;
        padding: 0.2em
        border-radius: 0.2em
        text-decoration: none;
        color: white
        &:visited
          color: white
